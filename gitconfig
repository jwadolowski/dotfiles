[includeIf "gitdir:~/projects/github/"]
    path = ~/.gitconfig_github_personal

[includeIf "gitdir:~/projects/github/wttech-private/"]
    path = ~/.gitconfig_github_wttech

[includeIf "gitdir:~/projects/wttech/"]
    path = ~/.gitconfig_wttech

[alias]
    br = branch
    ci = commit --no-verify
    cl = clone --recurse-submodules
    co = checkout
    ds = diff --staged
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pu = push -u origin HEAD
    rv = remote -v
    st = status
    sti = status --ignored
    fco = "!git co $(git for-each-ref --format='%(refname:short)' | grep -v "HEAD" | sed 's#^origin/##' | sort | uniq | fzf --layout=reverse)"
    sf = diff --name-only --staged

[core]
    pager = diff-so-fancy | less --tabs=4 -RFX
    excludesfile = $HOME/.gitignore_global

[color]
    ui = true

[color "diff"]
    commit = green
    meta = yellow
    frag = cyan bold
    old = red
    new = green
    whitespace = red reverse

[diff-so-fancy]
    markEmptyLines = false
    changeHunkIndicators = false
    rulerWidth = 80

# https://stackoverflow.com/a/62653400/6802186
[pull]
    rebase = false

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[init]
    defaultBranch = main

# vim: ft=gitconfig
