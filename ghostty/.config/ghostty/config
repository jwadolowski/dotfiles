theme = catppuccin-mocha
font-size = 13
# Ref: https://github.com/ghostty-org/ghostty/discussions/5455
copy-on-select = clipboard

# 2GB should be more than enough for scrollback
scrollback-limit = 2147483648

window-height = 40
window-width = 140
window-padding-x = 5

keybind = cmd+left=previous_tab
keybind = cmd+right=next_tab
keybind = cmd+period=esc:.
keybind = cmd+shift+left=move_tab:-1
keybind = cmd+shift+right=move_tab:+1

# Aider-specific fix
#
# shift+enter == alt+enter
keybind = shift+enter=text:\x1b\r

# ctlr+enter == enter
keybind = ctrl+enter=text:\r
